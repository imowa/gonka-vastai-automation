# Gonka Network Configuration
GONKA_NODE_URL=http://node2.gonka.ai:8000
POC_CHECK_INTERVAL=300  # Check every 5 minutes (300 seconds)
POC_PREP_TIME=1800      # Start GPU 30 minutes before PoC (1800 seconds)

# Vast.ai Configuration
VASTAI_API_KEY=your_vastai_api_key_here
VASTAI_GPU_TYPE=RTX_4090
VASTAI_MIN_VRAM=24      # Minimum GPU memory in GB
VASTAI_MAX_PRICE=0.60   # Maximum price per hour in USD
VASTAI_DISK_SIZE=50     # Disk size in GB

# Docker Configuration
DOCKER_IMAGE=gonka/mlnode:latest
HF_HOME=/workspace/cache

# PoC Configuration
MAX_POC_DURATION=10800  # Maximum PoC duration in seconds (3 hours safety limit)

# Hyperbolic API (for inference)
HYPERBOLIC_API_KEY=your_hyperbolic_api_key_here
HYPERBOLIC_BASE_URL=https://api.hyperbolic.xyz/v1
HYPERBOLIC_MODEL=meta-llama/Llama-3.3-70B-Instruct

# Monitoring & Alerts
ENABLE_ALERTS=true
MAX_DAILY_SPEND=2.0     # Maximum daily GPU spend in USD
ALERT_EMAIL=your_email@example.com  # Optional: for email alerts
