# ============================================
# HYPERBOLIC API (for 24/7 inference)
# ============================================
HYPERBOLIC_API_KEY=your_hyperbolic_api_key_here
HYPERBOLIC_BASE_URL=https://api.hyperbolic.xyz/v1
HYPERBOLIC_MODEL=Qwen/QwQ-32B
HYPERBOLIC_PROXY_PORT=8080

# ============================================
# DUAL MODEL CONFIGURATION
# ============================================
MLNODE_POC_MODEL=Qwen/Qwen2.5-7B-Instruct
# MLNODE_POC_MODEL=Qwen/Qwen2.5-3B-Instruct
MLNODE_INFERENCE_MODEL=Qwen/QwQ-32B
MLNODE_MODEL=${MLNODE_POC_MODEL}

# ============================================
# VAST.AI (for PoC GPU bursts)
# ============================================
VASTAI_API_KEY=your_vastai_api_key_here
VASTAI_SSH_KEY_PATH=/root/.ssh/id_rsa
VASTAI_GPU_TYPE=ANY
VASTAI_NUM_GPUS=1
# NOTE: 7B models fit on a single 24GB GPU; using >1 enables tensor parallelism and may OOM.
VASTAI_MAX_PRICE=0.30
VASTAI_MIN_VRAM=24
VASTAI_DISK_SIZE=50
VASTAI_SSH_READY_TIMEOUT=900
VASTAI_SSH_AUTH_GRACE=300

# ============================================
# YOUR VPS INFORMATION
# ============================================
VPS_IP=198.74.55.121

# ============================================
# GONKA NETWORK
# ============================================
GONKA_ADMIN_API_URL=http://localhost:9200
GONKA_NETWORK_NODE_URL=http://167.71.86.126:8000
GONKA_HOST_ADDRESS=gonka1youraddresshere

# ============================================
# MLNODE SETTINGS
# ============================================
MLNODE_ID=hyperbolic-proxy-1
MLNODE_QUANTIZATION=auto
MLNODE_INFERENCE_PORT=8000
MLNODE_POC_PORT=8000

# ============================================
# POC AUTOMATION SETTINGS
# ============================================
POC_PREP_TIME=1800
POC_CHECK_INTERVAL=300
MAX_POC_DURATION=10800
MAX_DAILY_SPEND=2.0

# ============================================
# DOCKER CONFIGURATION (for Vast.ai)
# ============================================
DOCKER_IMAGE=ghcr.io/product-science/mlnode:3.0.11-post1@sha256:0cf224b2f88694def989731ecdd23950a6d899be5d70e01e8dcf823b906199af
HF_HOME=/workspace/cache

# ============================================
# vLLM SETTINGS (remote GPU)
# ============================================
VLLM_MAX_MODEL_LEN=4096
VLLM_GPU_MEMORY_UTIL=0.9
VLLM_MAX_NUM_SEQS=256
VLLM_STARTUP_TIMEOUT=1500
VLLM_MODEL_DOWNLOAD_TIMEOUT=1200

# ============================================
# MONITORING
# ============================================
ENABLE_ALERTS=true
ALERT_EMAIL=your_email@example.com
